
<!-- video banner  -->
<div class="banner-hero">
  <div class="banner-content">
   <h1>Never forget a series. Ever again.</h1>
    <!-- search bar -->
    <%= form_tag series_index_path, method: :get do %>
      <%= text_field_tag :name_query,
      params[:name_query],
      class: "search-bar",
      placeholder: "Find a series"
      %>
      <%= submit_tag "Explore", class: "btn-main" %>
    <% end %>
  </div>
</div>

